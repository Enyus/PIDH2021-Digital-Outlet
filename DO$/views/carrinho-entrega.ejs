<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/carrinho-entrega.css">
    <title><%= title %></title>
</head>
<body>
    
    <header>
        <section class="header-principal">
            <div class="logo">
            <a href="/"><img src="/images/logo.png" alt="Logo DO$"></a>
            </div>
            <div class="busca">
            <p>Pesquise sua marca/produto:</p>
            <input type="text">
            <a href="/resultadobusca"><img src="/images/search-icon.png" alt="search"></a>
            </div>
            <div class="hbutton">
            <div>
                <a href="/usuario/login">
                <img src='/images/login.svg' alt="login">
                <p>LOG IN</p>
                </a>
            </div>
            <div>
                <a href="../cadastroloja">
                <img src="/images/lojista.svg" alt="login lojista">
                <p>VENDA CONOSCO</p>
                </a>
            </div>
            <div>
                <a href="../carrinho">
                <img src="/images/carrinho.svg" alt="carrinho">
                <p>SEU CARRINHO</p>
                </a>
            </div>
            </div>
        </section>
    
        <section class="buscamobile">
            <p>busca:</p>
            <input type="text">
            <a href="/resultadobusca"><img src="/images/search-icon.png" alt="search"></a>
        </section>    
    </header>
    <section class="header-menu">
        <a href="">ROUPAS</a>
        <a href="">LIVROS</a>
        <a href="">CALÇADOS</a>
        <a href="">ACESSÓRIOS</a>
        <a href="">PARA A CASA</a>
        <a href="">ESPORTE</a>
    </section>
    
    <main class="carrinho-entrega">
        <section class="processo-da-compra">
            <div>
                <a class="sacola" href="sacola">Sacola</a>
                <a class="identificacao" href="#">Identificação</a>
                <a class="entrega "href="#">Entrega</a>
                <a class="pagamento" href="#">Pagamento</a>
            </div>
        </section>
        <div class="container-entrega">
            <section class="dados-destinatario">
                <div>
                    <h3>Dados do Destinatário</h3>
                    <a href=""><img src="/icon/carrinho-editar.png" alt="edit-destinatario"></a>
                </div>
                <p>Fulano de Tal</p>
                <div class="contato">
                    <p>fulano@tal.com.br</p>
                    <p>(11) 99999-9999</p>
                </div>
            </section>
            <section class="entrega">
                <h3>Entrega</h3>
                <div class="cep">
                    <label for="cep">CEP</label>
                    <div>
                        <input type="text" id="cep" placeholder="xxxxx-xxx">
                        <a class="nao-sei-cep" href="">Não sei o CEP</a>
                    </div>
                </div>
                <div>
                    <label for="">Endereço de entrega</label>
                    <div class="endereco-entrega">
                        <p>Rua Pedro Paulo</p>
                        <p>Guaianases - São Paulo - SP</p>
                    </div>
                </div>    
                <div class="numero-compl">
                    <div>
                        <div>
                            <label for="numero-endereco">Número</label>
                            <input type="text" name="numero-endereco" id="numero-endereco">
                        </div>
                        <div>
                            <label for="complemento-endereco">Complemento</label>
                            <input type="text" name="compl-endereco" id="compl-endereco" placeholder="Apart. nº / Casa A">
                        </div>
                    </div>
                    <a href="">Escolher outro endereço</a>
                </div>
                <div class="modalidade-entrega">
                    <label for="">Selecione a forma de entrega</label>
                    <div class="container">
                        <div class="expressa">
                            <div>
                                <input type="radio" name="modalidade-entrega" value="Expressa" id="expressa">
                                <label for="expressa">Expressa<br>Em até 4 dias úteis</label>
                            </div>
                            <p>R$ 30,00</p>
                        </div>
                        <div class="padrao">
                            <div>
                                <input type="radio" name="modalidade-entrega" value="padrao" id="padrao">
                                <label for="padrao">Padrão<br>Em até 10 dias úteis</label>
                            </div>
                            <p>Grátis</p>
                        </div>
                        <div class="retirar">
                            <div>
                                <input type="radio" name="modalidade-entrega" value="retirar" id="retirar">
                                <label for="padrao">Retirar na loja<br>Em até 2 dias úteis</label>
                            </div>
                            <p>Grátis</p>
                        </div>
                    </div>
                </div>
                <!-- <button class="ir-pagamento">IR PARA O PAGAMENTO</button> -->
            </section>
            <section class="resumo">
                <h3 class="resumo">Resumo</h3>
                <div>
                    <table>
                        <tr>
                            <td class="img"><img src="/images/calca-bege.png" alt=""></td>
                            <td class="produto">
                                <h3 class="label">CALÇA BEGE</h3>
                                <div class="tamanho">
                                    <h4 class="label">Tamanho:</h4>
                                    <h4 class="dados">M</h4>
                                </div>
                                <div class="cor">
                                    <h4 class="label">Cor:</h4>
                                    <h4 class="dados">BEGE</h4>
                                </div>
                                <div class="cor">
                                    <h4 class="label">cód.: </h4>
                                    <h4 class="dados">205455548</h4>
                                </div>
                            </td>
                            <td>
                                <h4>R$ 100,00</h4>
                            </td>
                        </tr>
                        <tr>
                            <td><img src="/images/calca-bege.png" alt=""></td>
                            <td class="produto">
                                <h3 class="label">CALÇA BEGE</h3>
                                <div class="tamanho">
                                    <h4 class="label">Tamanho:</h4>
                                    <h4 class="dados">M</h4>
                                </div>
                                <div class="cor">
                                    <h4 class="label">Cor:</h4>
                                    <h4 class="dados">BEGE</h4>
                                </div>
                                <div class="cor">
                                    <h4 class="label">cód.: </h4>
                                    <h4 class="dados">205455548</h4>
                                </div>
                            </td>
                            <td>
                                <h4>R$ 100,00</h4>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="total">
                    <div>
                        <p>Subtotal</p>
                        <p>R$ 100,00</p>
                    </div>
                    <div>
                        <p>Taxa de entrega</p>
                        <p>à calcular</p>
                    </div>
                    <div class="total">
                        <p>Total</p>
                        <p>R$ 100,00</p>
                    </div>
                </div>
                <div>
                    <button class="ir-pagamento" type="submit">Ir para pagamento</button>
                </div>
            </section>
        </div>
    </main>
    
    <%- include('./partials/footer') %>
</body>
</html>