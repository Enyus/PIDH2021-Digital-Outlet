<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/icon/favicon.png">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

<body>

    <header>
    <section class="header-principal">
      <div class="logo">
        <a href="/"><img src="/images/logo.png" alt="Logo DO$"></a>
      </div>
      <div class="busca">
        <p>Pesquise sua marca/produto:</p>
        <% if (typeof(busca) != 'undefined') { %>
          <input type="text" id="campobusca" value="<%=busca%>">
        <% } else { %>
          <input type="text" id="campobusca">
        <% } %>
        <a href="/resultadobusca" id="botaobuscar"><img src="/images/search-icon.png" alt="search"></a>
      </div>
      <div class="hbutton">
        <div>
          <% if(usuario != undefined) { %>
            <a href="/cliente">
              <% if (usuario.fotoPerfil != null) { %>
                <img src=<%=usuario.fotoPerfil %> class="fotoPerfil" alt="login">
              <% } else { %>
                <img src='/images/login.svg' alt="login">
              <% } %>
            <p><%= usuario.nome %></p>
          <% } else { %>
            <a href="/login">
            <img src='/images/login.svg' alt="login">
            <p>LOG IN</p>
          <% } %>
          </a>
        </div>
        <div>          
            <a href="/cadastroloja">
            <img src="/images/lojista.svg" alt="login lojista">
            <p>VENDA CONOSCO</p>
            </a>
        </div>
        <div>
          <a href="/carrinho">
          <img src="/images/carrinho.svg" alt="carrinho">
          <p>SEU CARRINHO</p>
          </a>
        </div>
      </div>
    </section>

    <section class="buscamobile">
      <p>busca:</p>
      <% if (typeof(busca) != 'undefined') { %>
        <input type="text" id="campobuscamobile" value=<%= busca %>>
      <% } else { %>
        <input type="text" id="campobuscamobile">
      <% } %>
      <a href="/resultadobusca" id="botaobuscarmobile"><img src="/images/search-icon.png" alt="search"></a>
    </section>

    </header>
    
    <section class="header-menu">
        <a href="/resultadobusca?page=1&categoria=1">
          ROUPAS
        </a>
        <a href="/resultadobusca?page=1&categoria=2">
          LIVROS
        </a>
        <a href="/resultadobusca?page=1&categoria=3">
          CALÇADOS
        </a>
        <a href="/resultadobusca?page=1&categoria=4">
          ACESSÓRIOS
        </a>
        <a href="/resultadobusca?page=1&categoria=5">
          PARA A CASA
        </a>
        <a href="/resultadobusca?page=1&categoria=6">
          ESPORTE
        </a>
      </section>