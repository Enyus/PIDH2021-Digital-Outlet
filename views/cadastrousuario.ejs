<%- include('./partials/header') %>

  <main class="cadastrousuario">
    <section class="containergeral">
      <h1>Faça parte da família <img src="/images/logo-mini.svg" alt="mini logo"></h1>
      <p>Preencha os campos abaixo:</p>
      <form action="/cadastro" method="POST" enctype="multipart/form-data">
        <div class="formrow">
          <label for="email">E-mail:</label>
          <input type="email" id="email" name="email">
        </div>
        <div class="formrow">
          <label for="nome">Nome:</label>
          <input type="text" id="nome" name="nome">
        </div>
        <div class="formrow">
          <label for="sobrenome">Sobrenome:</label>
          <input type="text" id="sobrenome" name="sobrenome">
        </div>
        <div class="formrow">
          <label for="dataNasc">Data de Nascimento:</label>
          <input type="date" id="dataNasc" name="dataNasc">
        </div>
        <div class="formrow">
          <label for="cpf">CPF:</label>
          <input type="text" id="cpf" name="cpf">
        </div>
        <div class="formrow">
          <label for="password">Senha:</label>
          <input type="password" id="password" name="senha">
        </div>
        <div class="formrow">
          <label for="confirmapassword">Confirmar Senha:</label>
          <input type="password" id="confirmapassword" name="confirmapassword">
        </div>
        <div class="formrow">
          <label for="uploadFoto">Foto de perfil:</label>
          <div class="upload">
            <input type="file" id="fileupload" name="fotoPerfil" style="display:none;">
              <button type="button"  name="fotoPerfil" id="uploadFoto" onclick="document.getElementById('fileupload').click()">upload foto</button>
          </div>
      </div>
        <button type="submit" id="submit">Enviar</button>
      </form>
    </section>
  </main>

  <script src="/scripts/validateCliente.js"></script>

  <%- include('./partials/footer') %>