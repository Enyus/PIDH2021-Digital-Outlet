<%- include('./partials/head') %>
<link rel="stylesheet" href="/stylesheets/trabalheConosco.css">
</head>

<%- include('./partials/header') %>

  <main class="trabalheconosco">
    <section class="containergeral">
        <h1>Trabalhe na <img src="/images/logo-mini.svg" alt="mini logo"></h1>
        <% if (typeof(message) != 'undefined') { %>
            <h2 style='text-align:center'><%=message%></h2>
        <% } %>
        <div class="containersecundario">
            <div class="form">
                <p>Cadastre-se a uma de nossas vagas:</p>
                <form action="/trabalheconosco" method="POST" enctype="multipart/form-data">
                    <div class="formrow">
                        <label for="email">E-mail:</label>
                        <input type="email" id="email" name="email">
                    </div>
                    <div class="formrow">
                        <label for="nome">Nome Completo:</label>
                        <input type="text" id="nome" name="nome">
                    </div>
                    <div class="formrow">
                        <label for="departamentos">Departamentos:</label>
                        <select id="departamentos" name="departamento">
                            <option selected disabled value="escolha">Escolha</option>
                            <option value="adm">Administração</option>
                            <option value="dev">Developer</option>
                            <option value="mkt">Marketing</option>
                            <option value="fin">Financeiro</option>
                        </select>
                    </div>
                    <div class="formrow">
                        <label for="disp">Disponibilidade:</label>
                        <ul id="disp">
                            <li><input type="radio" id="4h" name="disp" value="4h"><label for="4h">4 horas</label></li>
                            <li><input type="radio" id="8h" name="disp" value="8h"><label for="8h">8 horas</label></li>
                            <li><input type="radio" id="freela" name="disp" value="freela"><label for="freela">Freela</label></li>
                        </ul>
                    </div>
                    <div class="formrow">
                        <label for="mensagem">Mensagem:</label>
                        <textarea id="mensagem" name="mensagem"></textarea>
                    </div>
                    <div class="formrow">
                        <label for="curriculo">Currículo:</label>
                        <div class="upload">
                            <button type="button" id="curriculo" onclick="document.getElementById('fileupload').click()">upload</button>
                            <input type="file" id="fileupload" accept=".pdf" name="curriculo">
                        </div>
                    </div>
                    
                    <button  class="red-button" type="submit" id="submit">Enviar</button>
                </form>
            </div>
            <div class="imagem">
                <img src="/images/trabalhe-conosco.png" alt="trabalhe conosco">
                <h2>Faça parte de uma equipe dinâmica que quer sempre estar a frente do mercado digital!</h2>
            </div>
        </div>
    </section>
  </main>

<script src="/scripts/validateTrabalheConoso.js"></script>

<%- include('./partials/footer') %>