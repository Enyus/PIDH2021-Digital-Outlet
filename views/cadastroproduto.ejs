  <%- include('./partials/head') %>
  <link rel='stylesheet' href='/stylesheets/cadastroproduto.css' />
</head>

<%- include('./partials/header') %>

<main class="cadastroproduto">
  <section class="containergeral">
    <h1>Cadastre seu Produto</h1>
    <div class="containersecundario">
      <form class="produto" action="/cadastroproduto" method="POST" enctype="multipart/form-data">
        <div class="sections">
          <section class="descProduto">
            <p class="lembrete">Lembre-se a descrição de seu produto tem importância ìmpar à decisão do consumidor!</p>
            
            <div class="formrow">
              <label for="nomeproduto">Produto:</label>
              <input type="text" id="nomeproduto" name="nomeproduto">
            </div>
            <div class="formrow">
              <label for="marca">Marca:</label>
              <select name="marca" id="marca">
                <option value="" disabled selected></option>
                <% marcas.forEach(marca => { %>
                  <option value="<%- marca.nomeMarca %>"><%= marca.nomeMarca %></option>
                <% }) %>
              </select>
                
            </div>
            <div class="formrow">
              <label for="preco">Preço:</label>
              <input type="text" id="preco" class="preco" name="preco" maxlength="10">
            </div>
            <div class="formrow">
              <label for="categoria">Categoria:</label>
              <select name="categoria" id="categoria">
                <option value="" disabled selected></option>
                <% categorias.forEach(categoria => { %>
                  <option value="<%- categoria.nomeCategoria %>"><%= categoria.nomeCategoria %></option>
                <% }) %>
              </select>
            </div>
            <div class="formrow">
              <label for="descproduto">Descrição:</label>
              <textarea id="descproduto" name="descproduto" rows="5"></textarea>
            </div>
          </section>          
          <section class="fotosInfoTec">
            <div class="formrow subContainers">
              <div class="titleContainer">
                <label for="fotoproduto">Fotos:</label>
              </div>
              <div class="fotoproduto container" id="fotoproduto">
                
                <button type="button" class="img" id="buttonimg1" onclick="document.getElementById('imgupload1').click()">
                  <input type="file" accept="image/*" id="imgupload1" class="nomeProduto" name="gallery">
                  <img src="/images/sample-img.svg">
                </button>

                <button style="display: none;" type="button" class="img" id="buttonimg2" onclick="document.getElementById('imgupload2').click()">
                  <input type="file" accept="image/*" id="imgupload2" class="nomeProduto" name="gallery">
                  <img src="/images/sample-img.svg">
                </button>
                <button style="display: none;" type="button" class="img" id="buttonimg3" onclick="document.getElementById('imgupload3').click()">
                  <input type="file" accept="image/*" id="imgupload3" class="nomeProduto" name="gallery">
                  <img src="/images/sample-img.svg">
                  <a href=""></a>
                </button>
                <button style="display: none;" type="button" class="img" id="buttonimg4" onclick="document.getElementById('imgupload4').click()">
                  <input type="file" accept="image/*" id="imgupload4" class="nomeProduto" name="gallery">
                  <img src="/images/sample-img.svg">
                </button>
                <button style="display: none;" type="button" class="img" id="buttonimg5" onclick="document.getElementById('imgupload5').click()">
                  <input type="file" accept="image/*" id="imgupload5" class="nomeProduto" name="gallery">
                  <img src="/images/sample-img.svg">
                </button>
                <button style="display: none;" type="button" class="img" id="buttonimg6" onclick="document.getElementById('imgupload6').click()">
                  <input type="file" accept="image/*" id="imgupload6" class="nomeProduto" name="gallery">
                  <img src="/images/sample-img.svg">
                </button>
              </div>
            </div>
            <div class="formrow subContainers">
              <div class="titleContainer">
                <label for="desctec" class="col0">Descrição Técnica:</label>
              </div>
              <div class="desctec container" id="desctec">
                <div class="formrow desctec_container1">
                  <input type="checkbox" id="checkdesc1">
                  <input type="text" class="col1" id="catdesc1" name="descTecValor">
                  <p>:</p>
                  <input type="text" class="col2" id="desctec1" name="descTecValor">
                </div>
                <div class="formrow desctec_container">
                  <input type="checkbox" id="checkdesc2">
                  <input type="text" class="col1" id="catdesc2" name="descTecValor">
                  <p>:</p>
                  <input type="text" class="col2" id="desctec2" name="descTecValor">
                </div>
                <div class="formrow desctec_container">
                  <input type="checkbox" id="checkdesc3">
                  <input type="text" class="col1" id="catdesc3" name="descTecValor">
                  <p>:</p>
                  <input type="text" class="col2" id="desctec3" name="descTecValor">
                </div>
                <div class="formrow desctec_container">
                  <input type="checkbox" id="checkdesc4">
                  <input type="text" class="col1" id="catdesc4" name="descTecValor">
                  <p>:</p>
                  <input type="text" class="col2" id="desctec4" name="descTecValor">
                </div>
                <div class="formrow desctec_container">
                  <input type="checkbox" id="checkdesc5">
                  <input type="text" class="col1" id="catdesc5" name="descTecValor">
                  <p>:</p>
                  <input type="text" class="col2" id="desctec5" name="descTecValor">
                </div>
                <div class="formrow desctec_container">
                  <input type="checkbox" id="checkdesc6">
                  <input type="text" class="col1" id="catdesc6" name="descTecValor">
                  <p>:</p>
                  <input type="text" class="col2" id="desctec6" name="descTecValor">
                </div>
              </div>
            </div>            
          </section>
        </div>
        <section class="estoquePromocao">
            <label for="estoque">Estoque:</label>
            <input type="number" id="estoque" class="estoque" name="estoque" min="0" max="999" value="1">
            <label for="promocao">Promocão:</label>
            <input type="text" id="promocao" class="promocao" name="promocao" min="0" maxlength="3" value="0">
            <p>%</p>
        </section>
        <section class="buttonsSendDelete">
          <button class="red-button" id="submit" type="submit">Salvar</button>
        </section>
      </form>
    </div>
  </section>
</main>

<script src="/scripts/mascara.js"></script>
<script src="/scripts/validateProduto.js"></script>

<%- include('./partials/footer') %>